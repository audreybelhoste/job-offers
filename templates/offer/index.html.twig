{% extends 'base.html.twig' %}

{% block title %}Liste des offres{% endblock %}

{% block body %}

<div class="d-flex my-5">
	<a href="{{ path('create_offer') }}" class="btn btn-primary">Ajouter une nouvelle offre</a>
</div>
<table class="table">
	<thead>

		<tr>
			<th scope="col">Intitul√©</th>
			<th scope="col">Description</th>
			<th scope="col">Lien</th>
		</tr>

	</thead>
	<tbody>

		{% for offer in offers %}
			<tr>
				<td>{{ offer.name }}</td>
				<td>{{ offer.description }}</td>
				<td><a href="{{ offer.url }}" target="_blank" class="btn btn-secondary">Offre</a></td>
			</tr>
		{% endfor %}

	</tbody>
</table>



{% endblock %}
